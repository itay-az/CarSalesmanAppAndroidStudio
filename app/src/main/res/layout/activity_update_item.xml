<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".UpdateItem"
    android:background="@color/black">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:textColor="@color/white"
            android:text="Update Item"
            android:textSize="50sp"
            android:textAlignment="center"
            android:layout_width="match_parent"
            android:layout_height="100sp"/>

        <EditText
            android:layout_margin="10sp"
            android:background="@color/white"
            android:hint="update car name.."
            android:textSize="20sp"
            android:id="@+id/updateCarName"
            android:layout_width="match_parent"
            android:layout_height="100sp"/>

        <EditText
            android:layout_margin="10sp"
            android:background="@color/white"
            android:hint="update car price.."
            android:textSize="20sp"
            android:id="@+id/updateCarPrice"
            android:layout_width="match_parent"
            android:layout_height="100sp"/>

        <EditText
            android:layout_margin="10sp"
            android:background="@color/white"
            android:hint="update car description.."
            android:textSize="20sp"
            android:id="@+id/updateCarDesc"
            android:layout_width="match_parent"
            android:layout_height="100sp"/>

        <EditText
            android:layout_margin="10sp"
            android:background="@color/white"
            android:hint="update car Image.."
            android:textSize="20sp"
            android:id="@+id/updateCarImage"
            android:layout_width="match_parent"
            android:layout_height="100sp"/>

        <Button
            android:id="@+id/btn_update"
            android:textColor="@color/black"
            android:text="Update"
            android:textSize="20sp"
            android:layout_marginLeft="50sp"
            android:layout_marginTop="20sp"
            android:backgroundTint="@color/white"
            android:layout_width="300sp"
            android:layout_height="70sp"/>



    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>